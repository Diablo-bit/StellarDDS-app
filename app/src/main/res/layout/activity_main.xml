<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectangle_7"
        android:layout_width="414dp"
        android:layout_height="544dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rectangle_8"
        android:layout_width="414dp"
        android:layout_height="653dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="61dp"
        android:background="@drawable/rectangle_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_7"
        app:layout_constraintVertical_bias="0.866"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/agent_login"
        android:layout_width="216dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/contrail_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/agent_login"
        android:textAppearance="@style/agent_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toTopOf="@+id/rectangle_7" />

    <EditText
        android:id="@+id/username_box"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="350dp"
        android:background="@drawable/user_pass_box"
        android:fontFamily="@font/contrail_one"
        android:text="@string/username"
        android:textAppearance="@style/username"
        android:textColor="#8A8585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agent_login" />

    <EditText
        android:id="@+id/password_box"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="280dp"
        android:background="@drawable/user_pass_box"
        android:fontFamily="@font/contrail_one"
        android:text="@string/password"
        android:textAppearance="@style/password"
        android:textColor="#8A8585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_box" />




</androidx.constraintlayout.widget.ConstraintLayout>